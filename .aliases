# Scripts
function mkcd(){
    mkdir $1
    cd $1
}
function e(){
    tree -L $1
}

function untar(){
    tar -zxvf $1
}

# Shortcuts
alias vimrc="$EDITOR ~/.vimrc"
alias zshrc="$EDITOR ~/.zshrc"

# Overwrites
alias vi="vim"
alias vim="vim"
alias mv="mv -i"
alias cp="cp -i"
alias tmux='tmux -u' # Fixes dumb unicode bug with oh-my-zsh themes and tmux
alias gph="git push heroku master"
alias a="atom ."
